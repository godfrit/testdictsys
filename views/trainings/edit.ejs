<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/trainings"><i class="fas fa-arrow-alt-circle-left"></i> Back</a>
            </div>
        </div>

        <div class="form-title text-center">
            <h2 class="text-dark">Update Details</h2>
            <span class="text-light">Use the form to update trainee details.</span>
        </div>
        <form action="/trainings/<%= training.id %>?_method=PUT" method="POST" id="add_user">
            <div class="new_user">
                <%- include('_form_fields') %>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Update</button>
                    </div>
            </div>
        </form>
    </div>
</main>