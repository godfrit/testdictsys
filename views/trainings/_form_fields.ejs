<div class="form-group">
    <label>Name</label>
    <input type="text" name="name" value="<%= training.name %>" placeholder="Juan Dela Cruz">
</div>
<div class="form-group">
    <label>Title</label>
    <input type="text" name="title" value="<%= training.title %>" placeholder="NC-2">
</div>
<div class="form-group">
    <label>Location</label>
    <input type="text" name="location" value="<%= training.location %>" placeholder="NCR-VAL">
</div>
<% if(training.gender==="" ){ %>
    <div class="form-group">
        <label for="gender" class="text-light">Gender</label>
        <div class="radio inline">
            <input type="radio" id="radio-2" name="gender" value="Male">
            <label for="radio-2" class="radio-label">Male</label>
        </div>
        <div class="radio inline">
            <input type="radio" id="radio-3" name="gender" value="Female">
            <label for="radio-3" class="radio-label">Female</label>
        </div>
        <div class="radio inline">
            <input type="radio" id="radio-4" name="gender" value="Unspecified" checked>
            <label for="radio-4" class="radio-label">Not Specified</label>
        </div>
    </div>
    <% } else { %>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" <%=training.gender=='Male' ? 'checked' : ''
                    %>>
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female" <%=training.gender=='Female' ? 'checked'
                    : '' %>>
                <label for="radio-3" class="radio-label">Female</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="gender" value="Unspecified" <%=training.gender=='Unspecified'
                    ? 'checked' : '' %>>
                <label for="radio-4" class="radio-label">Not Specified</label>
            </div>
        </div>
        <% } %>