<%- include('../partials/header.ejs') %>
  <main id="site-main">
    <div class="container">
      <div class="box-nav d-flex justify-between">
        <a href="/proficiencys/new" class="border-shadow">
          <span class="text-gradient"><i class="fas fa-plus"></i> ENTRY</i></span>
        </a>
      </div>

      <form action="/proficiencys" method="GET">
        <div class="searchbar">
          <input type="text" name="examination" value="" placeholder="Node.js , Express.js"
            value="<%= searchOptions.examination %>">
        </div>
        <button type="submit" class="searchbutton"><span class="text-gradient"><i class="fas fa-search"></i>
            SEARCH</i></span></button>
      </form>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Examination</th>
            <th>Ratio</th>
            <th>Total</th>
            <th>Date</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% proficiencys.forEach(proficiency=> { %>
            <tr>
              <td>
                <%= proficiency.id.toString().substring(18,25) %>
              </td>
              <td>
                <%= proficiency.examination %>
              </td>
              <td>
                <%= proficiency.ratio %>
              </td>
              <td>
                <%= proficiency.total %>
              </td>
              <td>
                <%= proficiency.examinationDate.toISOString().split('T')[0] %>
              </td>

              <td>
                <a href="/proficiencys/<%= proficiency.id %>" class="btn border-shadow update">
                  <span class="text-gradient"><i class="fas fa-file-alt"></i></span>
                </a>
                <a href="/proficiencys/<%= proficiency.id %>/edit" class="btn border-shadow update">
                  <span class="text-gradient"><i class="fas fa-user-edit"></i></span>
                </a>
                <%- include('../partials/deleteForm', { url: `/proficiencys/${proficiency.id}` }) %>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </main>